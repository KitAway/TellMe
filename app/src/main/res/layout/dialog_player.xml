<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dialog_start_margin"
            android:layout_marginLeft="@dimen/dialog_start_margin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:maxLines="1"/>
        <SeekBar
            android:id="@+id/seekbar_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/text_duration"
            android:layout_toLeftOf="@+id/text_duration"
            android:layout_toEndOf="@+id/text_start"
            android:layout_toRightOf="@+id/text_start"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/text_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dialog_end_margin"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dialog_end_margin"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_alignWithParentIfMissing="true"
            android:maxLines="1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/text_filname"
            android:layout_marginStart="@dimen/dialog_start_margin"
            android:layout_marginLeft="@dimen/dialog_start_margin"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btn_control"
            android:layout_toLeftOf="@+id/btn_control"
            android:maxLines="1"/>
        <ImageButton
            android:id="@id/btn_control"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginEnd="@dimen/dialog_end_margin"
            android:layout_marginRight="@dimen/dialog_end_margin"
            android:gravity="center_vertical"
            android:src="@drawable/ic_action_pause"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
